            <div class="alert alert-success" style="color: #1b9448">
                {{ message }}
            </div>
        {% endfor %}

        <div class="btnContent mt-5">
            <button class="btnForm" type="submit" name="Editer">Editer</button>
        </div>
    </div>
</div>


{{ form_end(adminFormFranchise) }}
