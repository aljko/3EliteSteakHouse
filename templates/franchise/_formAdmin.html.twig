{{ form_start(adminFormFranchise) }}

<div class="container mt-5">
    <div class="formBlock row d-flex">

        {{ form_label(adminFormFranchise.titre, 'Nom', {'label_attr': {'class': 'formLabel'} }) }}
        {{ form_widget(adminFormFranchise.titre, { 'attr': {'class': 'form-control formWidget'} }) }}

        {{ form_label(adminFormFranchise.contenu, 'Description', {'label_attr': {'class': 'formLabel'} }) }}
        {{ form_widget(adminFormFranchise.contenu, { 'attr': {'class': 'form-control formWidget contenuRow'} }) }}

